<Window x:Class="ClienteConsultasMedicas.Views.VentanaRecepcionista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Módulo Recepcionista" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel lateral -->
        <StackPanel Background="#FF2C3E50" Grid.Column="0">
            <TextBlock Text="Recepcionista" FontSize="20" Foreground="White"
                       HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Registrar paciente" Click="BtnPacientes_Click" Margin="10" Height="40"/>
            <Button Content="Registrar cita" Click="BtnCitas_Click" Margin="10" Height="40"/>
			<Button Content="Ver pacientes" Click="BtnVerPacientes_Click" Margin="10" Height="40"/>
			<Button Content="Ver citas" Click="BtnVerCitas_Click" Margin="10" Height="40"/>
            <Button Content="Resumen" 
        Height="40"
        Margin="5"
        Click="BtnDashboard_Click" Width="180"/>

           <Button Content="Cerrar sesión" Click="BtnCerrarSesion_Click" Margin="10" Height="40"/>
        </StackPanel>

        <ContentControl x:Name="contenido" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>
