<UserControl x:Class="ClienteConsultasMedicas.Views.ControlesRecepcionista.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">

    <Grid Margin="20">
        <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Border Background="#FFEDF7ED" Padding="20" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Pacientes Registrados" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtPacientes" FontSize="28" FontWeight="Bold" Foreground="DarkGreen"/>
                </StackPanel>
            </Border>

            <Border Background="#FFF5F5DC" Padding="20" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Citas Activas" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtActivas" FontSize="28" FontWeight="Bold" Foreground="Goldenrod"/>
                </StackPanel>
            </Border>

            <Border Background="#FFFFE0E0" Padding="20" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Citas Canceladas" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtCanceladas" FontSize="28" FontWeight="Bold" Foreground="Firebrick"/>
                </StackPanel>
            </Border>

            <Border Background="#FFE0F7FF" Padding="20" CornerRadius="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Citas para Hoy" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtHoy" FontSize="28" FontWeight="Bold" Foreground="SteelBlue"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>
