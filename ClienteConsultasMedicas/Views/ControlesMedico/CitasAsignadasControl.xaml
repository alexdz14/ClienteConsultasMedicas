<UserControl x:Class="ClienteConsultasMedicas.Views.ControlesMedico.CitasAsignadasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
	<Grid Background="#FFF">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Citas Asignadas" FontSize="24" FontWeight="Bold" Margin="10"/>

		<DataGrid x:Name="dgCitas" Grid.Row="1" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Paciente" Binding="{Binding paciente}" Width="*"/>
				<DataGridTextColumn Header="Fecha" Binding="{Binding fecha}" Width="*"/>
				<DataGridTextColumn Header="Hora" Binding="{Binding hora}" Width="*"/>
				<DataGridTextColumn Header="Motivo" Binding="{Binding motivo}" Width="2*"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
