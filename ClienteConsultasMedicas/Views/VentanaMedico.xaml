<Window x:Class="ClienteConsultasMedicas.Views.VentanaMedico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Módulo Médico" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Panel lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Contenido -->
        </Grid.ColumnDefinitions>

        <!-- Panel lateral -->
        <StackPanel Background="#FF2C3E50" Grid.Column="0">
            <TextBlock Text="Médico" FontSize="20" Foreground="White"
                       HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Citas asignadas" Click="BtnCitas_Click" Margin="10" Height="40"/>
            <Button Content="Registrar consulta" Click="BtnRegistrar_Click" Margin="10" Height="40"/>
            <Button Content="Historial clínico" Click="BtnHistorial_Click" Margin="10" Height="40"/>
            <Button Content="Cerrar sesión" Click="BtnCerrarSesion_Click" Margin="10" Height="40"/>
        </StackPanel>

        <!-- Contenedor dinámico -->
        <ContentControl x:Name="contenido" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>
